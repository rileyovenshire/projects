{{!-- Create a table --}}
<table id="customers-table">
<h2>Current Customers</h2>
    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            <th>Customer ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>


        {{#each customers}}
        <tr>
            <td>{{this.customer_id}}</td>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.email}}</td>
            <td><button onclick="deleteCustomer({{this.customer_id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_customer.js"></script>


{{!-- Form to add a record to the table  --}}
<h2>Add New Customer</h2>
<p>To add a new customer, please insert their information below and hit 'Submit'.</p>

<form id="add-customer-form-ajax">
    <div class="form-group">
    <label for="input-first-name">First Name: </label>
    <input type="text" name="input-first-name" id="input-first-name">
    </div>

    <div class="form-group">
    <label for="input-last-name">Last Name: </label>
    <input type="text" name="input-last-name" id="input-last-name">
    </div>

    <div class="form-group">
    <label for="input-email">Email: </label>
    <input type="email" name="input-email" id="input-email">
    </div>

    <input type="submit">
    
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_customer.js"></script>

<h2>Update Customer Contact</h2>
<p>To update a customer's contact information, please complete the form below and hit 'Submit'.</p>
<form id="update-customer-form-ajax">

    <div class="form-group">
    <label for="update-customer-select">Customer: </label>
    <select name="update-customer-select" id="update-customer-select" class="select">
        <option value="">Select a Customer</option>
        {{#each customers}}
        <option value="{{this.last_name}}">{{this.last_name}}</option>
        {{/each}}
    </select>
    </div>
    
    <div class="form-group">
    <label for="update-email">Email: </label>
    <input type="email" name="update-email" id="update-email">
    </div>

    <input type="submit">

</form>

<script src="./js/update_customer.js"></script>