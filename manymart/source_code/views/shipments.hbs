{{!-- Create a table --}}
<table id="shipments-table">
<h2>Current Shipments</h2>
    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            <th>Shipment ID</th>
            <th>Order ID</th>
            <th>Shipment Date</th>
            <th>Shipment Status</th>
            <th>Actions</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>


        {{#each shipments}}
        <tr>
            <td>{{this.shipment_id}}</td>
            <td>{{this.order_id}}</td>
            <td>{{this.shipment_date}}</td>
            <td>{{this.shipment_status}}</td>
            <td><button onclick="deleteShipment({{this.shipment_id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_shipment.js"></script>



{{!-- Form to add a record to the table  --}}
<h2>Add Shipment from Order ID</h2>
<p>To create a new Shipment, select the Order ID below and hit 'Submit'.</p>


{{!-- Select order ID --}}
<form id="add-shipment-form-ajax">
    <div class="form-group">
    <label for="select-order">Order ID: </label>
    <select name="select-order" required="required" id="select-order">
        <option value="">Select an Order</option>
        {{#each orders}}
        <option value="{{this.order_id}}">{{this.order_id}}</option>
        {{/each}}
    </select>
    </div>

    <div class="form-group">
    <label for="input-shipment-date">Shipment Date: </label>
    <input type="date" name="input-shipment-date" id="input-shipment-date">
    </div>

{{!-- When shipment is placed, shipment status will be marked as 1. --}}

    <input type="submit">
    
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_shipment.js"></script>

<h2>Update Shipment Status</h2>
<p>To update a shipment's current status, please complete the form below and hit 'Submit'.</p>
<form id="update-shipment-form-ajax">

    <div class="form-group">
    <label for="update-shipment-id">Shipment ID: </label>
    <select order_id="update-customer-id" id="customer-select" class="select">
        <option value="test">Select a Shipment</option>
        {{#each shipments}}
        <option value="{{this.shipment_id}}">{{this.shipment_id}}</option>
        {{/each}}
    </select>
    </div>
    
    <div class="form-group">
    <label for="update-status">Status: <strong>0 - not shipped</strong> or <strong>1 - shipped</strong></label>
    <input type="number" name="update-status" id="update-status">
    </div>

    <input type="submit">

    </form>

    <script src="./js/update_shipment.js"></script>