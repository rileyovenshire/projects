{{!-- Create a table --}}
<table id="orders-table">

<h2>Current Orders</h2>
    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            <th>Order ID</th>
            <th>Customer ID</th>
            <th>Shipment ID</th>
            <th>Order Date</th>
            <th>Actions</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>


        {{#each orders}}
        <tr>
            <td>{{this.order_id}}</td>
            <td>{{this.customer_id}}</td>
            <td>{{this.shipment_id}}</td>
            <td>{{this.order_date}}</td>
            <td><button onclick="deleteOrder({{this.order_id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_order.js"></script>


{{!-- Form to add a record to the table  --}}
<h2>Add New Order</h2>
<p>To add a new order, please complete the form below and hit 'Submit'.</p>

<form id="add-order-form-ajax">
    <div class="form-group">
    <label for="input-customer-id">Customer: </label>
    <select name="input-customer-id" required="required" id="input-customer-id">
        <option value="">Select a Customer</option>
        {{#each customers}}
        <option value="{{this.customer_id}}">{{this.last_name}}</option>
        {{/each}}
    </select>

    <div class="form-group">
    <label for="input-order-date">Order Date: </label>
    <input type="date" name="input-order-date" id="input-order-date">
    </div>

    <input type="submit">
    
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_order.js"></script>


<h2>Update Order</h2>
<p>To update an order, please complete the form below and hit 'Submit'.</p>
<form id="update-order-form-ajax">

    <div class="form-group">
    <label for="select-order-id">Order ID: </label>
    <select order_id="select-order-id" id="select-order-id" class="select">
        <option value="test">Select an Order</option>
        {{#each orders}}
        <option value="{{this.order_id}}">{{this.order_id}}</option>
        {{/each}}
    </select>
    </div>

    <div class="form-group">
    <label for="select-customer-id">Customer ID: </label>
    <input type="number" name="select-customer-id" id="select-customer-id">
    </div>

    <div class="form-group">
    <label for="select-shipment-id">Shipment ID: </label>
    <input type="number" name="select-shipment-id" id="select-shipment-id">
    </div>

    <input type="submit">
</form>

    <script src="./js/update_order.js"></script>
